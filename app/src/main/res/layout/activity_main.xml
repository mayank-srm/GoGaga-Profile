<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ss.com.bannerslider.views.BannerSlider
            android:id="@+id/banner_slider1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_margin="10dp"
            android:background="@drawable/white_bg"
            android:layout_alignParentEnd="true"/>


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/white_bg"
            android:src="@drawable/ic_cake_black_24dp"
            android:layout_below="@+id/banner_slider1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner_slider1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="55dp"
            android:id="@+id/name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="MAYANK, 19, Virgo"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8"
            android:layout_marginTop="20dp"
            android:layout_below="@id/name"
            android:id="@+id/view1"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_bg"
            android:src="@drawable/ic_music_note_black_24dp"
            android:layout_below="@+id/view1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="50dp"
            android:id="@+id/customRecyclerView1"
            android:layout_below="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8"
            android:layout_margin="5dp"
            android:layout_below="@id/customRecyclerView1"
            android:id="@+id/view2"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_bg"
            android:src="@drawable/ic_videocam_black_24dp"
            android:layout_below="@+id/view2"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/customRecyclerView2"
            android:layout_below="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8"
            android:layout_margin="5dp"
            android:layout_below="@id/customRecyclerView2"
            android:id="@+id/view3"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_bg"
            android:src="@drawable/ic_book_black_24dp"
            android:layout_below="@+id/view3"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/customRecyclerView3"
            android:layout_below="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8"
            android:layout_margin="5dp"
            android:layout_below="@id/customRecyclerView3"
            android:id="@+id/view4"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_bg"
            android:src="@drawable/ic_live_tv_black_24dp"
            android:layout_below="@+id/view4"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/customRecyclerView4"
            android:layout_below="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

    </RelativeLayout>
</ScrollView>